<Window x:Class="YtCaption.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 오버레이 배경 설정: 색상 선택 + 투명도 슬라이더 -->
        <GroupBox Header="오버레이 배경" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 색상 선택 -->
                <Button x:Name="ChooseColorBtn" Grid.Row="0" Grid.Column="0" Content="색상 선택..." Width="100" Click="ChooseColorBtn_OnClick"/>
                <Border Grid.Row="0" Grid.Column="1" Height="28" Margin="8,0,0,0" BorderBrush="#444" BorderThickness="1" CornerRadius="2">
                    <Border.Background>
                        <SolidColorBrush x:Name="ColorPreviewBrush" Color="#FF000000"/>
                    </Border.Background>
                </Border>

                <!-- 투명도 슬라이더 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                    <TextBlock Text="투명도:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="AlphaSlider" Minimum="0" Maximum="100" Width="220" TickFrequency="10" IsSnapToTickEnabled="False" ValueChanged="AlphaSlider_OnValueChanged"/>
                    <TextBlock x:Name="AlphaValueText" Text="0%" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 좌측 빈영역 배경 설정: 색상 선택 + 투명도 슬라이더 -->
        <GroupBox Header="좌측 빈영역 배경" Grid.Row="1" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 색상 선택 -->
                <Button x:Name="ChooseLeftColorBtn" Grid.Row="0" Grid.Column="0" Content="색상 선택..." Width="100" Click="ChooseLeftColorBtn_OnClick"/>
                <Border Grid.Row="0" Grid.Column="1" Height="28" Margin="8,0,0,0" BorderBrush="#444" BorderThickness="1" CornerRadius="2">
                    <Border.Background>
                        <SolidColorBrush x:Name="LeftColorPreviewBrush" Color="#FFFFFFFF"/>
                    </Border.Background>
                </Border>

                <!-- 투명도 슬라이더 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                    <TextBlock Text="투명도:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="LeftAlphaSlider" Minimum="0" Maximum="100" Width="220" TickFrequency="10" IsSnapToTickEnabled="False" ValueChanged="LeftAlphaSlider_OnValueChanged"/>
                    <TextBlock x:Name="LeftAlphaValueText" Text="0%" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="폰트" Grid.Row="2" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="글꼴:" VerticalAlignment="Center"/>
                <ComboBox x:Name="FontFamilyBox" Grid.Column="1" Margin="6,0,0,0" ItemsSource="{x:Static Fonts.SystemFontFamilies}"/>
                <TextBlock Text="크기:" Grid.Column="2" VerticalAlignment="Center" Margin="8,0,6,0"/>
                <TextBox x:Name="FontSizeBox" Grid.Column="3"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="미리보기:" Margin="0,0,0,4"/>
            <Border Background="#222222" Padding="8">
                <TextBlock x:Name="PreviewText" Text="Sample 텍스트" Foreground="White"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="저장" Width="80" Margin="0,0,8,0" Click="Save_OnClick"/>
            <Button Content="닫기" Width="80" Click="Close_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
